	file = {JSTOR Full Text PDF:C\:\\Users\\graha\\Zotero\\storage\\C56NYNDM\\Hodges and Reich - 2010 - Adding Spatially-Correlated Errors Can Mess Up the.pdf:application/pdf},
}

