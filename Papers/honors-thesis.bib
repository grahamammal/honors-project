	year = {2015},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/env.2331},
	keywords = {generalized linear mixed model, random effects, restricted regression, spatial confounding},
	pages = {243--254},
	file = {Hanks et al. - 2015 - Restricted spatial regression in practice geostat.pdf:C\:\\Users\\graha\\Zotero\\storage\\JK4N24MN\\Hanks et al. - 2015 - Restricted spatial regression in practice geostat.pdf:application/pdf;Snapshot:C\:\\Users\\graha\\Zotero\\storage\\FJYA8RPV\\env.html:text/html},
