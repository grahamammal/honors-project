	pages = {253--310},
	file = {Full Text PDF:C\:\\Users\\graha\\Zotero\\storage\\RQYWNLMT\\Bradley et al. - 2018 - Computationally Efficient Multivariate Spatio-Temp.pdf:application/pdf;Snapshot:C\:\\Users\\graha\\Zotero\\storage\\9CZCB54E\\1507687687.html:text/html},
